<div class="card shadow-lg rounded mt-5" style="max-width:40%; margin:auto;opacity:.95; ">
  <div class="card-header" style="text-align:center;background-color: rgb(36, 94, 113);padding-top:20px;">
    <h2 class="text-white"><strong>SIGN UP</strong>
    </h2>
  </div>
  <div class="card-body">

    {{#if message}}
    <div class="alert alert-{{class}} alert-dismissible fade show" role="alert">
      <button type="button" class="close" data-dismiss="alert" aria-label="Close">
        <span aria-hidden="true">&times;</span>
      </button>
      {{message}}
    </div>
    {{/if}}
    <form method="POST" action="/auth/join">

      <div class="row form-group">
        <div class="col">
          <label class="control-label">Email</label>
          <input class="form-control" value="{{data.email}}" type="text" disabled>
          <input type="hidden" value="{{data.email}}" name="email">
        </div>
      </div>

      <div class="row form-group">
        <div class="col">
          <label class="control-label">Password</label>
          <input class="form-control" name="password" type="password" required>
        </div>
      </div>

      <div class="row form-group">
        <div class="col">
          <label class="control-label">Confirm
            Password</label>
          <input class="form-control" name="confirmPassword" type="password" required>
        </div>
      </div>

      <div class="row" style="display: none;">
        <div class="col">
          {{#data.access}}
          <input type="hidden" value="{{this}}" name="access[]" class="form-control" readonly>
          {{/data.access}}
          <input type="hidden" value={{data.institutionId}} class="form-control" name="institutionId" readonly>
        </div>
      </div>

      <div class="row float-right" style="padding: 10px 0px;padding-top:40px;">
        <button type="submit" class="btn btn-success btn-block" role="button" data-slide="next">SUBMIT</button>
      </div>
    </form>

  </div>
</div>