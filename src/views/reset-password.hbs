<div class="card shadow-lg rounded mt-5" style="max-width:40%; margin:auto;opacity:.95; ">
  <div class="card-header" style="text-align:center;background-color: rgb(36, 94, 113);padding-top:20px;">
    <h2 class="text-white"><strong>RESET PASSWORD</strong>
    </h2>
  </div>
  <div class="card-body">

    {{#if data.message}}
    <div class="alert alert-{{class}} alert-dismissible fade show" role="alert">
      <button type="button" class="close" data-dismiss="alert" aria-label="Close">
        <span aria-hidden="true">&times;</span>
      </button>
      {{message}}
    </div>
    {{/if}}
    <form method="POST" action="/auth/reset-password">

      <div class="row form-group">
        <div class="col">
          <input class="form-control" value={{data.email}} name="email" type="hidden" required readonly>
        </div>
      </div>

      <div class="row form-group">
        <div class="col">
          <label class="control-label">New Password</label>
          <input class="form-control" name="newPassword" type="password" required>
        </div>
      </div>

      <div class="row form-group">
        <div class="col">
          <label class="control-label">Confirm New Password</label>
          <input class="form-control" name="confirmNewPassword" type="password" required>
        </div>
      </div>

      <div class=" form-group row">
        <div class="col">
          <button type="submit" class="btn btn-success btn-block">SUBMIT</button>
        </div>
      </div>
    </form>

  </div>
</div>